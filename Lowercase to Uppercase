#include <stdio.h>
#include <string.h>
void upprcase(char *p);

int main()
{
    char str[100];
    printf("Enter string");
    scanf("%s",str);
    upprcase(str);
    printf("The string in uppercase is %s",str);
}

void upprcase(char *p)
{
    int i=0;
    while(p[i]!='\0')
    {
       if(p[i]>='a' && p[i]<='z')
        {
           p[i]=p[i]-32;
        }
        i++;
    }
}
